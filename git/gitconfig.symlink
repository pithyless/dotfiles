[user]
  name = Norbert Wojtowicz
  email = wojtowicz.norbert@gmail.com
[init]
  templatedir = ~/.git_template
[core]
  excludesfile = /Users/norbert/.gitignore_global
  autocrlf = input
  editor = /usr/bin/vim
[color]
  interactive = true
  status = true
  branch = true
  diff = true
[alias]
  st = status
  c  = commit
  cc = commit
  co = checkout
  br = branch
  s = status
  a = add
  ap = add --patch
  d = diff
  dc = diff --cached
  v = show
  l = log --pretty=oneline -n 10
  ll = log -n 10
  cp = cherry-pick
  ctags = !.git/hooks/ctags
  news = log -p HEAD@{1}..HEAD@{0}

  ;; ri = rebase -i HEAD~10
  ;; sh = !git-sh
  ;; ro = !git fetch origin && git reset --hard origin/master

[merge]
  tool = meld
[push]
  default = simple
